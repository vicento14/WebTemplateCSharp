<div class="login-box">
    <div class="login-logo">
        <img src="@Url.Content($"~/dist/img/logo.png")" style="height:150px;">
        <h2><b>Web<br>Template</b></h2>
    </div>
    <!-- /.login-logo -->
    <div class="card">
        <div class="card-body login-card-body">
            <p class="login-box-msg"><b>Sign in to start your session</b></p>

            @using (Html.BeginForm("SignIn", "Login", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <div class="input-group">
                        <input type="text" class="form-control" id="username" asp-for="username" name="username" placeholder="Username" autocomplete="off" required>
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-user"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <input type="password" class="form-control" id="password" asp-for="password" name="password" placeholder="Password" autocomplete="off" required>
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row mb-2">
                    <div class="col">
                        <button type="submit" class="btn bg-primary btn-block" name="Login" value="login">Login</button>
                    </div>
                </div>
                <div class="row mb-2">
                    <div class="col">
                        <button type="button" href="#" target="_blank" class="btn bg-danger btn-block" id="wi">Work Instruction</button>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <center>
                            <a href="@Url.Action("Index", "Home")">Go Back to Home Page</a>
                        </center>
                    </div>
                </div>
            }
        </div>
    </div>
</div>