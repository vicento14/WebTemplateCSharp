<!DOCTYPE html>

<html lang="en-ph">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content="web template" />
    <meta name="keywords" content="web, template" />

    <title>@ViewBag.Title</title>

    <link rel="icon" href="@Url.Content($"~/dist/img/logo.ico")" type="image/x-icon" />
    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="@Url.Content($"~/dist/css/font.min.css")">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="@Url.Content($"~/plugins/fontawesome-free/css/all.min.css")">
    <!-- Theme style -->
    <link rel="stylesheet" href="@Url.Content($"~/dist/css/adminlte.min.css")">
    <!-- Sweet Alert -->
    <link rel="stylesheet" href="@Url.Content($"~/plugins/sweetalert2/dist/sweetalert2.min.css")">
</head>
<body class="hold-transition layout-top-nav accent-primary">
    <div class="wrapper">

        <!-- Preloader -->
        <div class="preloader flex-column justify-content-center align-items-center bg-white">
            <img class="animation__shake elevation-3 p-1 bg-light" src="@Url.Content($"~/dist/img/logo.png")" alt="Web Template" height="60" width="60">
            <noscript>
                <br>
                <span>We are facing <strong>Script</strong> issues. Kindly enable <strong>JavaScript</strong>!!!</span>
                <br>
                <span>Call IT Personnel Immediately!!! They will fix it right away.</span>
            </noscript>
        </div>

        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand-md navbar-dark bg-gray-dark text-light border-bottom-0">
            <a href="" class="navbar-brand ml-2">
                <img src="@Url.Content($"~/dist/img/logo.png")" alt="Web Template Logo" class="brand-image elevation-3 bg-light p-1" style="opacity: .8">
                <span class="brand-text font-weight-light text-light"><b>WEB</b> Template</span>
            </a>

            <button class="navbar-toggler order-1" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse order-3" id="navbarCollapse">
                <!-- Left navbar links -->
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a href="" class="nav-link active"><i class="fas fa-home"></i> Homepage</a>
                    </li>
                    <li class="nav-item">
                        <a href="#" class="nav-link"><i class="fas fa-plus"></i> Menu</a>
                    </li>
                    <li class="nav-item">
                        <a href="@Url.Action("Index", "Login")" class="nav-link"><i class="fas fa-sign-in-alt"></i> Login</a>
                    </li>
                </ul>
            </div>

            <!-- Right navbar links -->
            <ul class="order-1 order-md-3 navbar-nav navbar-no-expand ml-auto">
                <li class="nav-item">
                    <a class="nav-link" data-widget="fullscreen" role="button">
                        <i class="fas fa-expand-arrows-alt"></i>
                    </a>
                </li>
            </ul>
        </nav>
        <!-- /.navbar -->
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <div class="content-header">
                <div class="row mb-2 ml-1 mr-1">
                    <div class="col-sm-6">
                        <h1 class="m-0"> Home Page</h1>
                    </div><!-- /.col -->
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="">Web Template</a></li>
                            <li class="breadcrumb-item active">Homepage</li>
                        </ol>
                    </div><!-- /.col -->
                </div><!-- /.row -->
            </div>
            <!-- /.content-header -->
            <!-- Main content -->
            <div class="content">
                @RenderBody()
            </div>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->
        <!-- Main Footer -->
        <footer class="main-footer">
            <!-- To the right -->
            <div class="float-right d-none d-sm-inline">
                <b>Version</b> 1.0.2
            </div>
            <!-- Default to the left -->
            <strong>Copyright &copy; 2023 Vince Dale Alcantara.</strong>
            All rights reserved.
        </footer>
    </div>
    <!-- ./wrapper -->

    @RenderSection("Modals", false)

    <!-- REQUIRED SCRIPTS -->
    <!-- jQuery -->
    <script src="@Url.Content($"~/plugins/jquery/dist/jquery.min.js")"></script>
    <!-- Bootstrap 4 -->
    <script src="@Url.Content($"~/plugins/bootstrap/js/bootstrap.bundle.min.js")"></script>
    <!-- SweetAlert2 -->
    <script type="text/javascript" src="@Url.Content($"~/plugins/sweetalert2/dist/sweetalert2.min.js")"></script>
    <!-- AdminLTE App -->
    <script src="@Url.Content($"~/dist/js/adminlte.js")"></script>

    <noscript>We are facing Script issues. Kindly enable JavaScript</noscript>

</body>
</html>
